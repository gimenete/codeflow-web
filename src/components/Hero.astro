---
import { buttonVariants } from "@/components/ui/button";
import { badgeVariants } from "@/components/ui/badge";
import { cn } from "@/lib/utils";
---

<section class="relative px-6 pt-32 pb-20">
  <div
    class="pointer-events-none absolute inset-0"
    style="background: radial-gradient(ellipse 60% 50% at 50% 30%, var(--hero-glow), transparent 70%)"
  ></div>
  <div class="mx-auto max-w-6xl text-center">
    <h1 class="mb-6 text-5xl font-bold tracking-tight text-foreground md:text-7xl">
      A next-generation IDE
    </h1>

    <p class="mx-auto mb-10 max-w-2xl text-lg text-muted-foreground md:text-xl">
      Built-in Claude AI agents, deep Git integration, and first-class GitHub
      support — all in a fast, beautiful desktop app.
    </p>

    <div class="mb-6 flex flex-col items-center justify-center gap-4 sm:flex-row">
      <a
        href="#download"
        class={cn(buttonVariants({ size: "lg" }), "gap-2")}
      >
        <svg
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
          ></path>
        </svg>
        Download Codeflow
      </a>

      <a
        href="https://github.com/gimenete/codeflow"
        target="_blank"
        rel="noopener noreferrer"
        class={cn(buttonVariants({ variant: "outline", size: "lg" }), "gap-2")}
      >
        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
          ></path>
        </svg>
        Star on GitHub
      </a>
    </div>

    <div>
      <p class="mb-4 text-sm text-muted-foreground">
        Available for macOS, Windows, and Linux
      </p>

      <!-- Keyboard shortcut badge -->
      <div class="mb-8 inline-flex items-center gap-2">
        <span class={cn(badgeVariants({ variant: "secondary" }), "gap-2 px-3 py-1.5 text-sm")}>
          <kbd class="rounded bg-background px-1.5 py-0.5 font-mono text-xs text-foreground">&#8984;K</kbd>
          <span>to open Command Palette</span>
        </span>
      </div>

      <!-- IDE mockup: monochrome -->
      <div
        class="relative mx-auto aspect-video max-w-4xl overflow-hidden rounded-xl border border-border bg-card"
      >
        <!-- macOS title bar -->
        <div class="flex items-center gap-2 border-b border-border bg-background/60 px-4 py-2.5">
          <span class="h-3 w-3 rounded-full bg-muted-foreground/30"></span>
          <span class="h-3 w-3 rounded-full bg-muted-foreground/30"></span>
          <span class="h-3 w-3 rounded-full bg-muted-foreground/30"></span>
          <span class="ml-4 text-xs text-muted-foreground">Codeflow — project</span>
        </div>

        <div class="flex h-[calc(100%-37px)]">
          <!-- Sidebar -->
          <div class="w-48 shrink-0 border-r border-border bg-background/40 p-3">
            <div class="mb-3 h-2 w-16 rounded bg-muted-foreground/20"></div>
            <div class="space-y-2">
              <div class="flex items-center gap-2">
                <div class="h-2 w-2 rounded-sm bg-muted-foreground/20"></div>
                <div class="h-2 w-20 rounded bg-muted-foreground/15"></div>
              </div>
              <div class="flex items-center gap-2">
                <div class="h-2 w-2 rounded-sm bg-muted-foreground/20"></div>
                <div class="h-2 w-24 rounded bg-muted-foreground/15"></div>
              </div>
              <div class="flex items-center gap-2 pl-3">
                <div class="h-2 w-2 rounded-sm bg-muted-foreground/15"></div>
                <div class="h-2 w-16 rounded bg-muted-foreground/15"></div>
              </div>
              <div class="flex items-center gap-2 pl-3">
                <div class="h-2 w-2 rounded-sm bg-muted-foreground/15"></div>
                <div class="h-2 w-20 rounded bg-muted-foreground/15"></div>
              </div>
              <div class="flex items-center gap-2">
                <div class="h-2 w-2 rounded-sm bg-muted-foreground/20"></div>
                <div class="h-2 w-14 rounded bg-muted-foreground/15"></div>
              </div>
              <div class="flex items-center gap-2">
                <div class="h-2 w-2 rounded-sm bg-muted-foreground/15"></div>
                <div class="h-2 w-18 rounded bg-muted-foreground/15"></div>
              </div>
            </div>
          </div>

          <!-- Editor area -->
          <div class="flex-1 p-4">
            <div class="space-y-2">
              <div class="flex gap-2">
                <div class="h-2 w-12 rounded bg-muted-foreground/20"></div>
                <div class="h-2 w-20 rounded bg-muted-foreground/15"></div>
                <div class="h-2 w-8 rounded bg-muted-foreground/10"></div>
              </div>
              <div class="flex gap-2 pl-4">
                <div class="h-2 w-16 rounded bg-muted-foreground/15"></div>
                <div class="h-2 w-24 rounded bg-muted-foreground/10"></div>
              </div>
              <div class="flex gap-2 pl-4">
                <div class="h-2 w-10 rounded bg-muted-foreground/20"></div>
                <div class="h-2 w-32 rounded bg-muted-foreground/10"></div>
              </div>
              <div class="flex gap-2 pl-8">
                <div class="h-2 w-20 rounded bg-muted-foreground/15"></div>
                <div class="h-2 w-16 rounded bg-muted-foreground/10"></div>
              </div>
              <div class="flex gap-2 pl-8">
                <div class="h-2 w-14 rounded bg-muted-foreground/15"></div>
                <div class="h-2 w-28 rounded bg-muted-foreground/10"></div>
              </div>
              <div class="flex gap-2 pl-4">
                <div class="h-2 w-8 rounded bg-muted-foreground/10"></div>
              </div>
              <div class="h-2 w-0"></div>
              <div class="flex gap-2">
                <div class="h-2 w-16 rounded bg-muted-foreground/20"></div>
                <div class="h-2 w-12 rounded bg-muted-foreground/15"></div>
              </div>
              <div class="flex gap-2 pl-4">
                <div class="h-2 w-24 rounded bg-muted-foreground/10"></div>
                <div class="h-2 w-10 rounded bg-muted-foreground/15"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
