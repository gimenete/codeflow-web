---
interface Props {
  name: string;
  format: string;
  icon: string;
  delay?: number;
}

const { name, format, icon, delay } = Astro.props;
const delayClass = delay ? `delay-${delay}` : "";

const platformClassMap: Record<string, string> = {
  macOS: "platform-macos",
  Windows: "platform-windows",
  Linux: "platform-linux",
};

const iconColorMap: Record<string, string> = {
  macOS: "text-accent",
  Windows: "text-primary",
  Linux: "text-amber-400",
};

const platformClass = platformClassMap[name] || "";
const iconColorClass = iconColorMap[name] || "text-foreground";
---

<div
  class:list={[
    "flex flex-col items-center gap-3 rounded-xl border border-border bg-card p-6 card-glow animate-on-scroll",
    delayClass,
    platformClass,
  ]}
>
  <div class:list={[iconColorClass]} set:html={icon} />
  <div class="text-center">
    <p class="font-medium text-foreground">{name}</p>
    <p class="text-sm text-muted">{format}</p>
  </div>
</div>
