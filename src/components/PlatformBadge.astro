---
interface Props {
  name: string;
  format: string;
  icon: string;
}

const { name, format, icon } = Astro.props;
---

<div
  class="flex flex-col items-center gap-3 rounded-xl border border-border bg-card p-6 transition-colors hover:bg-card-hover"
>
  <div class="text-foreground" set:html={icon} />
  <div class="text-center">
    <p class="font-medium text-foreground">{name}</p>
    <p class="text-sm text-muted">{format}</p>
  </div>
</div>
