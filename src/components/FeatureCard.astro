---
interface Props {
  title: string;
  description: string;
  icon: string;
  delay?: number;
}

const { title, description, icon, delay } = Astro.props;
const delayClass = delay ? `delay-${delay}` : "";
---

<div
  class:list={[
    "rounded-xl border border-border bg-card p-6 card-glow animate-on-scroll",
    delayClass,
  ]}
>
  <div class="mb-4 text-primary" set:html={icon} />
  <h3 class="mb-2 text-lg font-semibold text-foreground">{title}</h3>
  <p class="text-sm leading-relaxed text-muted">{description}</p>
</div>
