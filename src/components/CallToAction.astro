---
import { buttonVariants } from "@/components/ui/button";
import { badgeVariants } from "@/components/ui/badge";
import { cn } from "@/lib/utils";
import releaseData from "@/data/release.json";

const REPO = "gimenete/codeflow";
const release = releaseData.release;

type Asset = {
  name: string;
  url: string;
  size: number;
  sizeFormatted: string;
  platform: string | null;
};

const platformOrder = ["macOS", "Windows", "Linux"] as const;

const platformIcons: Record<string, string> = {
  macOS: `<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25m18 0A2.25 2.25 0 0018.75 3H5.25A2.25 2.25 0 003 5.25m18 0V12a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 12V5.25" /></svg>`,
  Windows: `<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8.25V4.125C3 3.504 3.504 3 4.125 3h5.25c.621 0 1.125.504 1.125 1.125v4.125m-10.5 0H3m7.5 0h3m-3 0v7.5m0-7.5h6.375c.621 0 1.125.504 1.125 1.125V21m-7.5-12.75v12.75m0 0H4.125C3.504 21 3 20.496 3 19.875V8.25m7.5 12.75h6.375c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H10.5" /></svg>`,
  Linux: `<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M5.25 14.25h13.5m-13.5 0a3 3 0 01-3-3m3 3a3 3 0 100 6h13.5a3 3 0 100-6m-16.5-3a3 3 0 013-3h13.5a3 3 0 013 3m-19.5 0a4.5 4.5 0 01.9-2.7L5.737 5.1a3.375 3.375 0 012.7-1.35h7.126c1.062 0 2.062.5 2.7 1.35l2.587 3.45a4.5 4.5 0 01.9 2.7m0 0h.375a2.625 2.625 0 010 5.25H17.25" /></svg>`,
};

const downloadIcon = `<svg class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>`;

let platformAssets: { name: string; asset: Asset | undefined }[] = [];
let unmatchedAssets: Asset[] = [];

if (release) {
  platformAssets = platformOrder.map((name) => ({
    name,
    asset: release.assets.find((a: Asset) => a.platform === name),
  }));
  unmatchedAssets = release.assets.filter((a: Asset) => a.platform === null);
}
---

<div class="bg-border mx-auto max-w-6xl h-px"></div>

<section id="download" class="px-6 py-20">
  <div class="mx-auto max-w-6xl text-center">
    <div class="bg-card text-card-foreground mx-auto max-w-3xl rounded-xl border px-8 py-16 shadow-sm">
      <h2 class="mb-4 text-3xl font-bold tracking-tight md:text-4xl">
        Ready to try Codeflow?
      </h2>
      <p class="mx-auto mb-10 max-w-xl text-muted-foreground">
        Download the app and start building with AI-powered tools, deep Git
        integration, and first-class GitHub support.
      </p>

      {release ? (
        <div class="space-y-6">
          {/* Version badge */}
          <div class="flex items-center justify-center gap-2">
            <a
              href={release.url}
              target="_blank"
              rel="noopener noreferrer"
              class={cn(badgeVariants({ variant: "secondary" }), "gap-1.5 px-3 py-1 text-sm")}
            >
              {release.version}
            </a>
          </div>

          {/* Platform download buttons */}
          <div class="grid grid-cols-1 gap-3 sm:grid-cols-3">
            {platformAssets.map(({ name, asset }) => (
              <a
                href={asset?.url ?? `https://github.com/${REPO}/releases/latest`}
                target={asset ? undefined : "_blank"}
                rel={asset ? undefined : "noopener noreferrer"}
                class={cn(
                  buttonVariants({ variant: asset ? "default" : "outline", size: "lg" }),
                  "flex flex-col gap-1 h-auto py-3"
                )}
              >
                <span class="flex items-center gap-2">
                  <Fragment set:html={platformIcons[name]} />
                  {name}
                </span>
                {asset ? (
                  <span class="text-xs opacity-70">
                    {asset.name} ({asset.sizeFormatted})
                  </span>
                ) : (
                  <span class="text-xs opacity-70">Not available yet</span>
                )}
              </a>
            ))}
          </div>

          {/* Additional assets */}
          {unmatchedAssets.length > 0 && (
            <div class="space-y-2">
              <p class="text-sm text-muted-foreground">Other downloads:</p>
              <div class="flex flex-wrap justify-center gap-2">
                {unmatchedAssets.map((asset) => (
                  <a
                    href={asset.url}
                    class={cn(
                      buttonVariants({ variant: "outline", size: "sm" }),
                      "gap-1.5 text-xs"
                    )}
                  >
                    <Fragment set:html={downloadIcon} />
                    {asset.name} ({asset.sizeFormatted})
                  </a>
                ))}
              </div>
            </div>
          )}

          {/* All releases link */}
          <p class="text-sm text-muted-foreground">
            <a
              href={`https://github.com/${REPO}/releases`}
              target="_blank"
              rel="noopener noreferrer"
              class="underline underline-offset-4 hover:text-foreground"
            >
              View all releases on GitHub
            </a>
          </p>
        </div>
      ) : (
        <div class="space-y-4">
          <p class="text-muted-foreground">
            No releases available yet. Check back soon!
          </p>
          <div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
            <a
              href={`https://github.com/${REPO}`}
              target="_blank"
              rel="noopener noreferrer"
              class={cn(buttonVariants({ variant: "outline", size: "lg" }), "gap-2")}
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"></path>
              </svg>
              Star on GitHub
            </a>
          </div>
        </div>
      )}
    </div>
  </div>
</section>
